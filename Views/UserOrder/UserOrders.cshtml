@model IEnumerable<Order>

<div style="width:100%" class="mt-2">
    <a href="/Identity/Account/Manage" class="btn btn-primary my-2">Back</a>

    <h4>My Orders</h4>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Order Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                        <td>@order.OrderStatus.StatusName</td>
                    </tr>

                    @if (order.OrderDetail != null && order.OrderDetail.Any())
                    {
                        <tr>
                            <td colspan="2">
                                <table class="table table-bordered mt-2">
                                    <thead>
                                        <tr>
                                            <th colspan="5" class="text-end">
                                                Total:
                                                @order.OrderDetail.Sum(x => x.Book.Price * x.Quantity)
                                            </th>
                                        </tr>
                                        <tr>
                                            <th>Book</th>
                                            <th>Image</th>
                                            <th>Genre</th>
                                            <th>Unit Price (INR)</th>
                                            <th>Total Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.OrderDetail)
                                        {
                                            <tr>
                                                <td>@item.Book.BookName</td>
                                                <td>
                                                    @if (string.IsNullOrEmpty(item.Book.Image))
                                                    {
                                                        <img src="/images/NoImage.png" style="width:80px;height:100px" />
                                                    }
                                                    else
                                                    {
                                                        <img src="/images/@item.Book.Image" style="width:80px;height:100px" />
                                                    }
                                                </td>
                                                <td>@item.Book.Genre.GenreName</td>
                                                <td>@item.Book.Price x @item.Quantity</td>
                                                <td>@(item.Book.Price* item.Quantity)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h5>No orders</h5>
    }
</div>